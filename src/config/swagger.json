{
    "openapi": "3.0.0",
    "info": {
        "title": "API de manipulação de leituras de ambiente",
        "description": "Tem como objetivo manipular sensores ambientes e leituras de ambentes a partir de sensores em arduinos",
        "contact": {
            "email": "root.vinicius@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3456",
            "description": "API de testes"
        }
    ],
    "paths": {
        "/login": {
            "get": {
                "summary": "Login de admin",
                "description": "Login para gerar o token JWT",
                "tags": ["login"],
                "parameters": [
                    {
                        "name": "email",
                        "in": "header",
                        "description": "email de acesso",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "header",
                        "description": "senha de acesso",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "400": {
                        "description": "lack of headers"
                    },
                    "403": {
                        "description": "auh faild"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                       "status": {
                                           "type": "number",
                                           "example": 200
                                       },
                                       "message": {
                                           "type": "string",
                                            "format": "JWT",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJFaWQiOjEsImlhdCI6MTYzODczMTAzNywiZXhwIjoxNjM4NzQ1NdM3fQ.3Z4QLaXF2GvaAfm7YnpVPcl0xaTj8dWpgJ-XyWITNEw"
                                       }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sensor": {
            "post": {
                "summary": "Cadastro de sensores",
                "description": "responsavel por cadastrar sensores",
                "tags": ["sensors"],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcessToken"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Sensor"
                            },
                            "examples": {
                                "sensor": {
                                    "value": {
                                        "description": "DHT22",
                                        "gap": 200,
                                        "situation": "funcional",
                                        "device": 1
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "409": {
                        "description": "Duplicate field"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "get": {
                "summary": "Listagem de sensores",
                "description": "Responsável por listar todos os sensores cadastrados",
                "tags": ["sensors"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                       "status": {
                                           "type": "number",
                                           "example": 200
                                       },
                                       "message": {
                                           "type": "array",
                                           "items": {
                                               "type": "object",
                                                "$ref": "#/components/schemas/Sensor"
                                           }
                                       }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Remover sensor por descrição",
                "description": "Responsável por remover um sensor por sua descrição",
                "tags": ["sensors"],
                "parameters": [{
                    "name": "description",
                    "in": "query",
                    "description": "Descrição do sensor",
                    "required": true
                },
                {
                    "$ref": "#/components/parameters/AcessToken"
                }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/place": {
            "get": {
                "summary": "Listagem de ambientes",
                "description": "Responsável por listar todos os ambientes cadastrados",
                "tags": ["places"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                       "status": {
                                           "type": "number",
                                           "example": 200
                                       },
                                       "message": {
                                           "type": "array",
                                           "items": {
                                               "type": "object",
                                                "$ref": "#/components/schemas/Place"
                                           }
                                       }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": { 
        "schemas": {
            "Sensor": {
                "type": "object",
                "required": [
                    "situation",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "number"
                    },                   
                    "description": {
                        "type": "string"
           
                    },
                    "installation_date": {
                        "type": "string",
                        "format": "timestamp",
                        "example": "2021-12-04T03:00:00.000Z"
                    },
                    "device": {
                        "type": "number",
                        "description": "Mostra se sensor está ligado ou não",
                        "example": 1
                    },
                    "situation": {
                        "type": "string"
                    },
                    "gap": {
                        "type": "number"
                    }
                }
            },
            "Place": {
                "type": "object",
                "required": [],
                "properties": {
                    "id": {
                        "type": "number"
                    },                   
                    "description": {
                        "type": "string"
           
                    },
                    "note": {
                        "type": "string"
                    },
                    "material": {
                        "type": "string"
                    },
                    "height": {
                        "type": "number",
                        "format": "float"
                    },
                    "width": {
                        "type": "number",
                        "format": "float"
                    },
                    "length": {
                        "type": "number",
                        "format": "float"
                    }
                }
            }
        },
        "parameters": {
            "AcessToken": {
              "name": "x-access-token",
              "in": "header",
              "description": "Token de acesso, precisa efetuar o login para ter o token de acesso",
              "required": true,
              "schema": {
                  "type": "string"
              }
            }
        }
    }
}