{
    "openapi": "3.0.0",
    "info": {
        "title": "API de manipulação de leituras de ambiente",
        "description": "Tem como objetivo manipular sensores ambientes e leituras de ambentes a partir de sensores em arduinos",
        "contact": {
            "email": "root.vinicius@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3456",
            "description": "API de testes"
        }
    ],
    "paths": {
        "/login": {
            "get": {
                "summary": "Login de admin",
                "description": "Login para gerar o token JWT",
                "tags": ["login"],
                "parameters": [
                    {
                        "name": "email",
                        "in": "header",
                        "description": "email de acesso",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "header",
                        "description": "senha de acesso",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "400": {
                        "description": "lack of headers"
                    },
                    "403": {
                        "description": "auh faild"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                       "status": {
                                           "type": "number",
                                           "example": 200
                                       },
                                       "message": {
                                           "type": "string",
                                            "format": "JWT",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJFaWQiOjEsImlhdCI6MTYzODczMTAzNywiZXhwIjoxNjM4NzQ1NdM3fQ.3Z4QLaXF2GvaAfm7YnpVPcl0xaTj8dWpgJ-XyWITNEw"
                                       }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sensor": {
            "post": {
                "summary": "Cadastro de sensores",
                "description": "responsavel por cadastrar sensores",
                "tags": ["sensors"],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcessToken"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Sensor"
                            },
                            "examples": {
                                "sensor": {
                                    "value": {
                                        "description": "DHT22",
                                        "gap": 200,
                                        "situation": "funcional",
                                        "device": 1
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "409": {
                        "description": "Duplicate field"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "get": {
                "summary": "Listagem de sensores",
                "description": "Responsável por listar todos os sensores cadastrados",
                "tags": ["sensors"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                       "status": {
                                           "type": "number",
                                           "example": 200
                                       },
                                       "message": {
                                           "type": "array",
                                           "items": {
                                               "type": "object",
                                                "$ref": "#/components/schemas/Sensor"
                                           }
                                       }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Remover sensor por descrição",
                "description": "Responsável por remover um sensor por sua descrição",
                "tags": ["sensors"],
                "parameters": [{
                    "name": "description",
                    "in": "query",
                    "description": "Descrição do sensor",
                    "required": true
                },
                {
                    "$ref": "#/components/parameters/AcessToken"
                }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/place": {
            "get": {
                "summary": "Listagem de ambientes",
                "description": "Responsável por listar todos os ambientes cadastrados",
                "tags": ["places"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                       "status": {
                                           "type": "number",
                                           "example": 200
                                       },
                                       "message": {
                                           "type": "array",
                                           "items": {
                                               "type": "object",
                                                "$ref": "#/components/schemas/Place"
                                           }
                                       }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Cadastro de ambientes",
                "description": "Responsável por cadastrar ambientes",
                "tags": ["places"],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcessToken"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Place"
                            },
                            "examples": {
                                "place": {
                                    "value": {
                                        "description": "Laboratório 1",
                                        "note": "Sala experimentos, simples",
                                        "material": "alvenaria",	
                                        "height": "2",
                                        "length": "10",
                                        "width": "8"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "409": {
                        "description": "Duplicate field"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "delete": {
                "summary": "Remover ambiente por descrição",
                "description": "Responsável por remover um ambiente por sua descrição",
                "tags": ["places"],
                "parameters": [{
                    "name": "description",
                    "in": "query",
                    "description": "Descrição do ambiente",
                    "required": true
                },
                {
                    "$ref": "#/components/parameters/AcessToken"
                }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/type-reading": {
            "post": {
                "summary": "Cadastro de tipo de leitura",
                "description": "Responsável por cadastrar um novo tipo de leitura",
                "tags": ["type-readings"],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcessToken"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/TypeReading"
                            },
                            "examples": {
                                "place": {
                                    "value": {
                                        "description": "umidade",
                                        "min_value": 0,
                                        "max_value": 100,
                                        "prefix": "%"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "409": {
                        "description": "Duplicate field"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "delete": {
                "summary": "Remover tipo de leitura por descrição",
                "description": "Responsável por remover um tipo de leitura por sua descrição",
                "tags": ["type-readings"],
                "parameters": [{
                    "name": "description",
                    "in": "query",
                    "description": "Descrição do ambiente",
                    "required": true
                },
                {
                    "$ref": "#/components/parameters/AcessToken"
                }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            }

        },
        "/readingByPlaceId{id}": {
            "get": {
                "summary": "Listar leituras por Ambientes",
                "description": "Uma das principais rotas, responsável por listar todas as leituras de determinado ambiente, separando por tipo de leitura",
                "tags": ["readings"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do ambiente",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                       "status": {
                                           "type": "number"
                                       },
                                       "message": {
                                           "type": "array",
                                           "items": {
                                               "properties": {
                                                    "type_reading": {
                                                        "type": "string"
                                                    },
                                                    "prefix": {
                                                        "type": "string"
                                                    },
                                                    "values": {
                                                        "type": "array",
                                                        "items": {
                                                            "$ref": "#/components/schemas/Reading"
                                                        }
                                                    }
                                                }
                                           }
                                       }
                                    }
                                },
                                "examples": {
                                    "ambiente com dados de temperatura": {
                                        "value": {
                                            "status": 200,
                                            "message": [
                                                {
                                                    "type_reading": "temperatura",
                                                    "prefix": "°C",
                                                    "values": [
                                                        {
                                                            "id": 25,
                                                            "value": "22.200",
                                                            "date": "2021-11-24T03:00:00.000Z",
                                                            "hour": "07:08:02",
                                                            "id_sensor": 2
                                                        }
                                                    ]
                                                }
                                            ]
    
                                        }
                                    },
                                    "ambiente com dados de umidade": {
                                        "value": {
                                            "status": 200,
                                            "message": [
                                                {
                                                    "type_reading": "umidade",
                                                    "prefix": "%",
                                                    "values": [
                                                        {
                                                            "id": 50,
                                                            "value": "50.000",
                                                            "date": "2021-11-27T03:00:00.000Z",
                                                            "hour": "09:02:01",
                                                            "id_sensor": 4
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    },
                                    "ambiente com dados de temperatura e umidade": {
                                        "value": {
                                            "status": 200,
                                            "message": [
                                                {
                                                    "type_reading": "temperatura",
                                                    "prefix": "°C",
                                                    "values": [
                                                        {
                                                            "id": 23,
                                                            "value": "22.200",
                                                            "date": "2021-11-24T03:00:00.000Z",
                                                            "hour": "08:02:10",
                                                            "id_sensor": 5
                                                        }
                                                    ]
                                                },
                                                {
                                                    "type_reading": "umidade",
                                                    "prefix": "%",
                                                    "values": [
                                                        {
                                                            "id": 54,
                                                            "value": "50.000",
                                                            "date": "2021-11-24T03:00:00.000Z",
                                                            "hour": "08:02:01",
                                                            "id_sensor": 5
                                                        }
                                                    ]
                                                }
                                            ]
    
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/reading": {
            "post": {
                "summary": "Inserir uma nova leitura",
                "description": "responsável por inserir uma nova leitura, normalemente usada no arduino",
                "tags": ["readings"],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/AcessToken"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Reading"
                            },
                            "examples": {
                                "place": {
                                    "value": {
                                        "value": 20,
                                        "id_place": 1,
                                        "id_sensor": 24,
                                        "id_type_reading": 2
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "409": {
                        "description": "Duplicate field"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "components": { 
        "schemas": {
            "Sensor": {
                "type": "object",
                "required": [
                    "situation",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "number"
                    },                   
                    "description": {
                        "type": "string"
           
                    },
                    "installation_date": {
                        "type": "string",
                        "format": "timestamp",
                        "example": "2021-12-04T03:00:00.000Z"
                    },
                    "device": {
                        "type": "number",
                        "description": "Mostra se sensor está ligado ou não",
                        "example": 1
                    },
                    "situation": {
                        "type": "string"
                    },
                    "gap": {
                        "type": "number"
                    }
                }
            },
            "Place": {
                "type": "object",
                "required": [],
                "properties": {
                    "id": {
                        "type": "number"
                    },                   
                    "description": {
                        "type": "string"
           
                    },
                    "note": {
                        "type": "string"
                    },
                    "material": {
                        "type": "string"
                    },
                    "height": {
                        "type": "number",
                        "format": "float"
                    },
                    "width": {
                        "type": "number",
                        "format": "float"
                    },
                    "length": {
                        "type": "number",
                        "format": "float"
                    }
                }
            },
            "TypeReading": {
                "type": "object",
                "required": [
                    "description",
                    "prefix"
                ],
                "properties": {
                    "id": {
                        "type": "number"
                    },                   
                    "description": {
                        "type": "string"
           
                    },
                    "min_value": {
                        "type": "number",
                        "format": "float"
                    },
                    "max_value": {
                        "type": "number",
                        "format": "float"
                    },
                   "prefix": {
                       "type": "string"
                   }
                }
            },
            "Reading": {
                "type": "object",
                "required": [],
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    
                    "value": {
                        "type": "string",
                        "format": "number"
                    },
                    "date": {
                        "type": "string",
                        "format": "timestamp",
                        "example": "2021-11-24T03:00:00.000Z"
                    },
                    "hour": {
                        "type": "string",
                        "format": "hour",
                        "example": "07:08:02"
                    },
                    "id_sensor": {
                        "type": "number"
                    }
                }
            }
        },
        "parameters": {
            "AcessToken": {
              "name": "x-access-token",
              "in": "header",
              "description": "Token de acesso, precisa efetuar o login para ter o token de acesso",
              "required": true,
              "schema": {
                  "type": "string"
              }
            }
        }
    }
}